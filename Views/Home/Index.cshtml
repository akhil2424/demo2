@model demo2.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Firstpage.cshtml";
}
<style>
    #signUpForm {
        display: none;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "signInForm" }))
            {
                <h1>Sign In</h1>
                <div class="form-group">
                    @Html.LabelFor(x => x.Email, "Email")
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter your email" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter your password" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>
                <input type="button" id="LoginButton" value="Login" class="btn btn-primary" />
                <br />
                <a id="showSignUp">Don't have an account? Click to Sign Up!</a>
            }

            @using (Html.BeginForm("Signup", "Home", FormMethod.Post, new { id = "signUpForm" }))
            {
                <h1>Sign Up</h1>
                <div class="form-group">
                    @Html.LabelFor(x => x.Email, "Email")
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter email" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Enter password" })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Username, "Name")
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Enter name" })
                    @Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
                </div>

                <input type="button" id="signUpButton" value="Sign Up" class="btn btn-primary" />
                <br />
                <a id="showSignIn">Already have an account? Click to Sign In!</a>
            }
        </div>
    </div>
</div>
<input type="hidden" id="_root" value="@Url.Content("~/")" />
@section scripts
           {
    <script src="~/Scripts/index.js"></script>
}

